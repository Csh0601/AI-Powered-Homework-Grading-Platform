{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "知识点名称"
    },
    "subject": {
      "type": "string",
      "enum": ["数学", "语文", "英语", "物理", "化学", "生物", "历史", "地理", "政治"],
      "description": "所属学科"
    },
    "grade": {
      "type": "string",
      "enum": ["Grade 7", "Grade 8", "Grade 9"],
      "description": "适用年级"
    },
    "chapter": {
      "type": "string",
      "description": "所属章节"
    },
    "chapter_number": {
      "type": "number",
      "description": "章节编号"
    },
    "description": {
      "type": "string",
      "description": "知识点详细描述"
    },
    "difficulty_level": {
      "type": "number",
      "minimum": 1,
      "maximum": 5,
      "description": "难度等级：1-容易，2-较易，3-中等，4-较难，5-困难"
    },
    "importance_level": {
      "type": "number",
      "minimum": 1,
      "maximum": 5,
      "description": "重要程度：1-了解，2-理解，3-掌握，4-熟练，5-核心必考"
    },
    "exam_frequency": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "考试频率比例，0.0表示从不考，1.0表示必考"
    },
    "learning_objectives": {
      "type": "string",
      "description": "学习目标"
    },
    "common_mistakes": {
      "type": "string",
      "description": "常见错误和易错点"
    },
    "learning_tips": {
      "type": "string",
      "description": "学习技巧和记忆方法"
    },
    "keywords": {
      "type": "string",
      "description": "关键词标签，用|分隔"
    }
  },
  "required": ["name", "subject", "grade", "chapter", "description", "difficulty_level", "importance_level", "keywords"],
  "additionalProperties": false
}